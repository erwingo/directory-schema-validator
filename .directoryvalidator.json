{
  "ignoreFiles": [
    ".gitignore",
    ".directoryvalidator.json",
    "package-lock.json",
    ".DS_Store"
  ],
  "ignoreDirs": [
    "node_modules",
    ".nyc_output",
    "coverage",
    ".git"
  ],
  "commonRules": {
    "rule_indexfile": {
      "type": "file",
      "name": "index.js"
    }
  },
  "rules": [
    {
      "type": "file",
      "name": "package.json"
    },
    {
      "type": "file",
      "name": "LICENSE"
    },
    {
      "type": "file",
      "name": ".travis.yml"
    },
    {
      "type": "file",
      "name": "tsconfig.json"
    },
    {
      "type": "file",
      "name": "*.md"
    },
    {
      "type": "directory",
      "name": "supportFiles"
    },
    {
      "type": "directory",
      "name": "src",
      "isOptional": true,
      "rules": [
      ]
    }
  ]
}
