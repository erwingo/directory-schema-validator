{
  "definitions": {
    "fileRule": {
      "type": "object",
      "required": ["type", "name"],
      "properties": {
        "type": {
          "enum": ["file"]
        },
        "name": { "type": "string" },
        "extension": { "type": "string" },
        "isOptional": { "type": "boolean" }
      },
      "additionalProperties": false
    },
    "directoryRule": {
      "type": "object",
      "required": ["type", "name"],
      "properties": {
        "type": {
          "enum": [
            "directory"
          ]
        },
        "name": { "type": "string" },
        "isOptional": { "type": "boolean" },
        "isRecursive": { "type": "boolean" },
        "rules": { "$ref": "#/definitions/rules" }
      },
      "additionalProperties": false
    },
    "rules": {
      "type": "array",
      "uniqueItems": true,
      "items": {
        "oneOf": [
          { "$ref": "#/definitions/fileRule" },
          { "$ref": "#/definitions/directoryRule" },
          {
            "title": "commonRule",
            "type": "object",
            "properties": {
              "type": { "enum": ["commonRule"] },
              "id": { "type": "string", "pattern": "^rule_" }
            },
            "required": ["type", "id"],
            "additionalProperties": false
          }
        ]
      }
    }
  },
  "title": "Folder schema validator",
  "type": "object",
  "properties": {
    "ignoreFiles": {
      "type": "array",
      "uniqueItems": true,
      "items": { "type": "string" }
    },
    "ignoreDirs": {
      "type": "array",
      "uniqueItems": true,
      "items": { "type": "string" }
    },
    "rules": { "$ref": "#/definitions/rules" },
    "commonRules": {
      "type": "object",
      "patternProperties": {
        "^rule_": {
          "oneOf": [
            { "$ref": "#/definitions/fileRule" },
            { "$ref": "#/definitions/directoryRule" }
          ]
        }
      },
      "additionalProperties": false
    }
  },
  "additionalProperties": false,
  "required": [
    "rules"
  ]
}
